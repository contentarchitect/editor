{
  "name": "@contentarchitect/editor",
  "version": "0.2.40",
  "main": "./dist/CaCore.umd.js",
  "module": "./src/base.js",
  "files": [
    "dist/*",
    "public/*",
    "*.json",
    "*.js"
  ],
  "scripts": {
    "serve": "vue-cli-service serve",
    "build:core": "vue-cli-service build --target lib --name CaCore ./src/core/index.js --no-clean",
    "build:editor": "vue-cli-service build --target lib --name CaEditor ./src/editor.js --no-clean",
    "build:blocks": "vue-cli-service build --target lib --name CaBlocks ./src/blocks/index.js --no-clean",
    "build": "rm -rf dist && npm run build:core && npm run build:editor && npm run build:blocks",
    "lint": "vue-cli-service lint",
    "inspect": "vue-cli-service inspect"
  },
  "dependencies": {
    "@contentarchitect/blocks": "file:src/blocks",
    "@contentarchitect/core": "file:src/core",
    "@contentarchitect/header": "file:../header",
    "@vue/web-component-wrapper": "^1.2.0",
    "axios": "^0.19.0",
    "codemirror": "^5.49.2",
    "core-js": "^2.6.5",
    "lodash.clonedeep": "^4.5.0",
    "normalize.css": "^8.0.1",
    "popper.js": "^1.16.0",
    "portal-vue": "^2.1.6",
    "v-tooltip": "^2.0.2",
    "vue": "^2.6.10",
    "vue-image-upload-resize": "^2.0.4"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.9.0",
    "@vue/cli-plugin-eslint": "^3.9.0",
    "@vue/cli-service": "^3.9.0",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.0.0",
    "vue-svg-loader": "^0.12.0",
    "vue-template-compiler": "^2.6.10",
    "webpack-cli": "^3.3.10"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ]
}
